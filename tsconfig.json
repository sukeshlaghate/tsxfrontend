{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "ESNext",
    "target": "ES5",
    "lib": [
      "es6",
      "es5",
      "dom"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "React",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "files": [
      "./src/index.tsx", 
      "./src/interfaces/react-avatar-editor.d.ts" 
 ],
  "compileOnSave": true
}